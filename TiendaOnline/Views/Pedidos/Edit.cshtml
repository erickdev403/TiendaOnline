@{
}

@model TiendaOnline.Models.Entities.Pedidos

<h1>Editar Pedido</h1>
@if (Model is null)
{

    <p>Pedido no encontrado</p>
}
else
{

    <form method="post">

        <div class="mt-3">
            <label class="form-label">ID Pedido</label>
            <input type="text" class="form-control" asp-for="PedidoID" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">ID Cliente</label>
            <input type="text" class="form-control" asp-for="ClienteID" />
        </div>


        <div class="mt-3">
            <label class="form-label">ID Producto</label>
            <input type="text" class="form-control" asp-for="ProductoID" />
        </div>


        <div class="mt-3">
            <label class="form-label">Cantidad</label>
            <input type="text" class="form-control asp-for="Cantidad" />
        </div>

        <div class="mt-3">
            <label class="form-label">Fecha</label>
            <input type="date" class="form-control" asp-for="Fecha" />
        </div>


        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Pedidos">Eliminar</button>
        </div>

    </form>
}