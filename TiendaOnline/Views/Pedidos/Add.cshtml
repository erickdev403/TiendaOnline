@model TiendaOnline.Models.AddPedidosModel

<h1>Agregar Pedidos</h1>
<form method="post">

    <div class="mt-3">
        <label class="form-label">ID Clientes</label>
        <input type="text" class="form-control" asp-for="ClienteID" />
    </div>


    <div class="mt-3">
        <label class="form-label">ID Productos</label>
        <input type="text" class="form-control" asp-for="ProductoID" />
    </div>


    <div class="mt-3">
        <label class="form-label">Cantidad</label>
        <input type="text" class="form-control" asp-for="Cantidad" />
    </div>

    <div class="mt-3">
        <label class="form-label">Fecha</label>
        <input type="date" class="form-control" asp-for="Fecha" />
    </div>


    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>

</form>