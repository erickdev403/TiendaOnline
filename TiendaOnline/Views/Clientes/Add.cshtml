@model TiendaOnline.Models.AddClientesModel

<h1>Agregar Cliente</h1>
<form method="post">

<div class="mt-3">
    <label class="form-label">Nombre</label>
    <input type="text" class="form-control" asp-for="Nombre"/>
</div>


<div class="mt-3">
    <label class="form-label">Apellidos</label>
    <input type="text" class="form-control"  asp-for="Apellido"/>
</div>


<div class="mt-3">
    <label class="form-label">Email</label>
    <input type="text" class="form-control" name="Email" asp-for="Email" />
</div>

<div class="mt-3">
    <label class="form-label">Telefono</label>
    <input type="text" class="form-control" name="Telefono" asp-for="Telefono"/>
</div>


<div class="mt-3"> 
    <button type="submit" class="btn btn-primary">Guardar</button>
</div>

</form>