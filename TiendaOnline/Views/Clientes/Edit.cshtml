@{
}

@model TiendaOnline.Models.Entities.Clientes

<h1>Editar Cliente</h1>
@if (Model is null) 
{
    
        <p>Cliente no encontrado</p>  
}
else{

<form method="post">

    <div class="mt-3">
        <label class="form-label">ClientesID</label>
        <input type="text" class="form-control" asp-for="ClientesID" readonly/>
    </div>

    <div class="mt-3">
        <label class="form-label">Nombre</label>
        <input type="text" class="form-control" asp-for="Nombre" />
    </div>


    <div class="mt-3">
        <label class="form-label">Apellidos</label>
        <input type="text" class="form-control" asp-for="Apellido" />
    </div>


    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" name="Email" asp-for="Email" />
    </div>

    <div class="mt-3">
        <label class="form-label">Telefono</label>
        <input type="text" class="form-control" name="Telefono" asp-for="Telefono" />
    </div>


    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="clientes">Eliminar</button>
    </div>

</form>
}