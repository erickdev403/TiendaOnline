@model TiendaOnline.Models.AddProductosModel

<h1>Agregar Producto</h1>
<form method="post">

    <div class="mt-3">
        <label class="form-label">Nombre</label>
        <input type="text" class="form-control" asp-for="Nombre" />
    </div>


    <div class="mt-3">
        <label class="form-label">Descripcion</label>
        <input type="text" class="form-control" asp-for="Descripcion" />
    </div>


    <div class="mt-3">
        <label class="form-label">Precio</label>
        <input type="text" class="form-control" name="Precio" asp-for="Precio" />
    </div>

    <div class="mt-3">
        <label class="form-label">stock</label>
        <input type="text" class="form-control" name="stock" asp-for="stock" />
    </div>


    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>

</form>