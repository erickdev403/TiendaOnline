@{
}

@model TiendaOnline.Models.Entities.Productos
<h1>Editar Producto</h1>
@if (Model is null)
{

    <p>Producto no encontrado</p>
}
else
{

    <form method="post">

        <div class="mt-3">
            <label class="form-label">ProductoID</label>
            <input type="text" class="form-control" asp-for="ProductoID" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Nombre</label>
            <input type="text" class="form-control" asp-for="Nombre" />
        </div>


        <div class="mt-3">
            <label class="form-label">Descripcion</label>
            <input type="text" class="form-control" asp-for="Descripcion" />
        </div>


        <div class="mt-3">
            <label class="form-label">Precio</label>
            <input type="text" class="form-control" asp-for="Precio" />
        </div>

        <div class="mt-3">
            <label class="form-label">Stock</label>
            <input type="text" class="form-control" asp-for="stock" />
        </div>


        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Productos">Eliminar</button>
        </div>

    </form>
}